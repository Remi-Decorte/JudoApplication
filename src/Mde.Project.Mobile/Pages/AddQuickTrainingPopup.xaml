<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup
    x:Class="Mde.Project.Mobile.Pages.Popups.AddQuickTrainingPopup"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    CanBeDismissedByTappingOutsideOfPopup="True">

    <!-- Bottom-sheet -->
    <Grid BackgroundColor="White"
          Padding="16,16,16,0"
          RowDefinitions="Auto,*,Auto"
          HeightRequest="560"
          VerticalOptions="End">

        <!-- Header -->
        <VerticalStackLayout Spacing="2">
            <HorizontalStackLayout Spacing="12">
                <Label Text="Nieuwe gebeurtenis" FontAttributes="Bold" FontSize="18" />
                <Label x:Name="LblDateHint" Text="" TextColor="#666" />
            </HorizontalStackLayout>
            <!-- Dynamische eindtijd hint -->
            <Label x:Name="LblEndHint" Text="Eindigt om —:—" TextColor="#666" FontSize="12"/>
        </VerticalStackLayout>

        <!-- Form -->
        <ScrollView Grid.Row="1">
            <VerticalStackLayout Spacing="14" Padding="0,6,0,8">

                <!-- Type -->
                <VerticalStackLayout>
                    <Label Text="Type training" FontAttributes="Bold" />
                    <Picker x:Name="TypePicker">
                        <Picker.Items>
                            <x:String>Techniek</x:String>
                            <x:String>Conditioneel</x:String>
                            <x:String>Wedstrijdvoorbereiding</x:String>
                            <x:String>Herstel</x:String>
                        </Picker.Items>
                    </Picker>
                </VerticalStackLayout>

                <!-- Datum / Tijd + Duur -->
                <Grid ColumnDefinitions="*,*,*" ColumnSpacing="12">
                    <VerticalStackLayout>
                        <Label Text="Datum" FontAttributes="Bold" />
                        <DatePicker x:Name="DatePick" DateSelected="OnDateChanged"/>
                    </VerticalStackLayout>

                    <VerticalStackLayout Grid.Column="1">
                        <Label Text="Start" FontAttributes="Bold" />
                        <TimePicker x:Name="TimePick" PropertyChanged="OnTimeChanged"/>
                    </VerticalStackLayout>

                    <VerticalStackLayout Grid.Column="2">
                        <Label Text="Duur" FontAttributes="Bold" />
                        <Picker x:Name="DurationPicker" SelectedIndexChanged="OnDurationChanged">
                            <Picker.Items>
                                <x:String>30 min</x:String>
                                <x:String>1 u</x:String>
                                <x:String>1 u 30</x:String>
                                <x:String>2 u</x:String>
                                <x:String>3 u</x:String>
                            </Picker.Items>
                        </Picker>
                    </VerticalStackLayout>
                </Grid>

                <!-- Kleur -->
                <VerticalStackLayout Spacing="8">
                    <Label Text="Kleur" FontAttributes="Bold" />
                    <HorizontalStackLayout Spacing="12">
                        <Button x:Name="C1" WidthRequest="36" HeightRequest="36" CornerRadius="18" BackgroundColor="#1976D2" />
                        <Button x:Name="C2" WidthRequest="36" HeightRequest="36" CornerRadius="18" BackgroundColor="#2E7D32" />
                        <Button x:Name="C3" WidthRequest="36" HeightRequest="36" CornerRadius="18" BackgroundColor="#F57C00" />
                        <Button x:Name="C4" WidthRequest="36" HeightRequest="36" CornerRadius="18" BackgroundColor="#8E24AA" />
                        <Button x:Name="C5" WidthRequest="36" HeightRequest="36" CornerRadius="18" BackgroundColor="#D32F2F" />
                    </HorizontalStackLayout>
                </VerticalStackLayout>
            </VerticalStackLayout>
        </ScrollView>

        <!-- Footer -->
        <Grid Grid.Row="2" ColumnDefinitions="*,Auto" Padding="0,8,0,16">
            <Button Text="Annuleren"
                    BackgroundColor="Transparent"
                    TextColor="#666666"
                    Clicked="OnCancel" />

            <Button Grid.Column="1"
                    Text="Opslaan"
                    BackgroundColor="#0078D4"
                    TextColor="White"
                    CornerRadius="8"
                    Padding="18,10"
                    Clicked="OnSave" />
        </Grid>
    </Grid>
</toolkit:Popup>
