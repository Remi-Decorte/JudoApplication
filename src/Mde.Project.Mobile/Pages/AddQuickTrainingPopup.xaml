<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup
    x:Class="Mde.Project.Mobile.Pages.Popups.AddQuickTrainingPopup"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    CanBeDismissedByTappingOutsideOfPopup="True">

    <!-- Bottom-sheet style -->
    <Grid Padding="16" BackgroundColor="White"
          MaximumHeightRequest="500" VerticalOptions="End"
          RowDefinitions="Auto,*,Auto">

        <!-- Header -->
        <HorizontalStackLayout Spacing="12">
            <Label Text="Nieuwe gebeurtenis" FontAttributes="Bold" FontSize="18" />
            <Label x:Name="LblDateHint" Text="" TextColor="#666" />
        </HorizontalStackLayout>

        <!-- Form -->
        <ScrollView Grid.Row="1">
            <VerticalStackLayout Spacing="14">
                <!-- Training type -->
                <VerticalStackLayout>
                    <Label Text="Type training" FontAttributes="Bold" />
                    <Picker x:Name="TypePicker">
                        <Picker.Items>
                            <x:String>Techniek</x:String>
                            <x:String>Conditioneel</x:String>
                            <x:String>Wedstrijdvoorbereiding</x:String>
                            <x:String>Herstel</x:String>
                        </Picker.Items>
                    </Picker>
                </VerticalStackLayout>

                <!-- Date & time -->
                <Grid ColumnDefinitions="*,*" ColumnSpacing="12">
                    <VerticalStackLayout>
                        <Label Text="Datum" FontAttributes="Bold" />
                        <DatePicker x:Name="DatePick" />
                    </VerticalStackLayout>
                    <VerticalStackLayout Grid.Column="1">
                        <Label Text="Tijd" FontAttributes="Bold" />
                        <TimePicker x:Name="TimePick" />
                    </VerticalStackLayout>
                </Grid>

                <!-- Color choices -->
                <VerticalStackLayout Spacing="8">
                    <Label Text="Kleur" FontAttributes="Bold" />
                    <HorizontalStackLayout Spacing="12">
                        <Button x:Name="C1" WidthRequest="36" HeightRequest="36" CornerRadius="18" BackgroundColor="#1976D2" />
                        <Button x:Name="C2" WidthRequest="36" HeightRequest="36" CornerRadius="18" BackgroundColor="#2E7D32" />
                        <Button x:Name="C3" WidthRequest="36" HeightRequest="36" CornerRadius="18" BackgroundColor="#F57C00" />
                        <Button x:Name="C4" WidthRequest="36" HeightRequest="36" CornerRadius="18" BackgroundColor="#8E24AA" />
                        <Button x:Name="C5" WidthRequest="36" HeightRequest="36" CornerRadius="18" BackgroundColor="#D32F2F" />
                    </HorizontalStackLayout>
                </VerticalStackLayout>
            </VerticalStackLayout>
        </ScrollView>

        <!-- Actions -->
        <Grid Grid.Row="2" ColumnDefinitions="*,Auto" Margin="0,12,0,0">
            <Button Text="Annuleren" Clicked="OnCancel" />
            <Button Grid.Column="1" Text="Opslaan" Clicked="OnSave"
                    BackgroundColor="#2E7D32" TextColor="White" />
        </Grid>
    </Grid>
</toolkit:Popup>
