<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:Mde.Project.Mobile.ViewModels"
             x:Class="Mde.Project.Mobile.Pages.AgendaPage"
             Title="Mijn Agenda">

    <ContentPage.BindingContext>
        <vm:AgendaViewModel />
    </ContentPage.BindingContext>

    <ContentPage.Content>
        <StackLayout Padding="20">
            <Label Text="Trainingen" FontSize="24" FontAttributes="Bold" Margin="0,10,0,20" />

            <CollectionView ItemsSource="{Binding Trainings}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame Margin="5" Padding="10" BackgroundColor="White" CornerRadius="8" HasShadow="True">
                            <VerticalStackLayout>
                                <Label Text="{Binding Date, StringFormat='{}{0:dd/MM/yyyy}'}" FontSize="16" FontAttributes="Bold" />
                                <Label Text="{Binding Type}" FontSize="14" />
                            </VerticalStackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
