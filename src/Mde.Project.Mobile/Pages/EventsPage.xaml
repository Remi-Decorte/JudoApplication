<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Mde.Project.Mobile.Pages.EventsPage"
             Title="Events">

    <Grid BackgroundColor="LightGray" Padding="0" RowDefinitions="Auto,*">
        <!-- Header (matching style) -->
        <Grid BackgroundColor="White" Padding="15" ColumnDefinitions="*,Auto" RowDefinitions="Auto" Margin="0,0,0,2">
            <HorizontalStackLayout Spacing="30">
                <Label>
                    <Label.FormattedText>
                        <FormattedString>
                            <Span Text="JUDO" FontSize="24" FontAttributes="Bold" TextColor="Black"/>
                            <Span Text="TV"   FontSize="24" FontAttributes="Bold" TextColor="#FBBF24"/>
                        </FormattedString>
                    </Label.FormattedText>
                </Label>
            </HorizontalStackLayout>
        </Grid>

        <!-- Content -->
        <RefreshView Grid.Row="1" Command="{Binding RefreshCommand}" IsRefreshing="{Binding IsBusy}">
            <CollectionView ItemsSource="{Binding Events}" Margin="10">
                <CollectionView.EmptyView>
                    <VerticalStackLayout Padding="20" Spacing="6" HorizontalOptions="Center" VerticalOptions="Center">
                        <Label Text="Geen events" FontAttributes="Bold" />
                        <Label Text="Trek omlaag om te verversen." FontSize="12" TextColor="Gray"/>
                    </VerticalStackLayout>
                </CollectionView.EmptyView>

                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame Margin="5" Padding="12" BackgroundColor="White" CornerRadius="10" HasShadow="True">
                            <VerticalStackLayout Spacing="4">
                                <Label Text="{Binding Title}" FontSize="18" FontAttributes="Bold" TextColor="Black"/>
                                <Label Text="{Binding Location}" FontSize="14" TextColor="Gray"/>
                                <Label Text="{Binding Date, StringFormat='{}{0:dd/MM/yyyy}'}" FontSize="14" TextColor="#FBBF24"/>
                            </VerticalStackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </RefreshView>
    </Grid>
</ContentPage>
